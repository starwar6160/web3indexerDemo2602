  "dependencies": {
    "@types/pg": "^8.16.0",
    "kysely": "^0.28.11",
    "pg": "^8.18.0",
    "viem": "^1.0.0",
    "web3": "^1.10.0",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "ts-node": "^10.9.0",
    "typescript": "^5.0.0"
