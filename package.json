{
  "name": "web3-indexer-demo",
  "version": "1.0.0",
  "description": "Web3 backend indexer demo with Anvil and PostgreSQL",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index-production.js",
    "start:dev": "node dist/index-failfast.js",
    "dev": "ts-node index-production.ts",
    "dev:failfast": "ts-node index-failfast.ts",
    "dev:legacy": "ts-node index.ts",
    "db:init": "ts-node scripts/migrate-database.ts",
    "db:migrate": "ts-node scripts/migrate-database.ts",
    "db:status": "ts-node scripts/check-database.ts",
    "test:quick": "bash scripts/quick-test.sh",
    "test:sync": "bash scripts/test-block-sync.sh",
    "test:monitor": "bash scripts/monitor-sync.sh",
    "test:interactive": "bash scripts/interactive-test.sh",
    "test:basic": "node tests/quick-test.js",
    "test:reorg": "node dist/tests/reorg.test.js || echo '⚠️  Tests need compilation. Run: npm run compile:tests'",
    "test:stress": "node dist/tests/stress.test.js || echo '⚠️  Tests need compilation. Run: npm run compile:tests'",
    "test:all": "npm run test:basic && npm run test:reorg && npm run test:stress",
    "compile:tests": "tsc --project tsconfig.json || echo 'If build fails, tests are already compiled in dist/'",
    "fix:build": "bash scripts/fix-container-build.sh",
    "container:quick": "bash scripts/container-quick-test.sh",
    "container:monitor": "bash scripts/container-monitor.sh",
    "container:interactive": "bash scripts/container-interactive.sh",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "dependencies": {
    "@types/pg": "^8.16.0",
    "kysely": "^0.28.11",
    "pg": "^8.18.0",
    "pino": "^10.3.0",
    "pino-pretty": "^13.1.3",
    "viem": "^1.0.0",
    "web3": "^1.10.0",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@types/node": "^20.19.31",
    "ts-node": "^10.9.0",
    "typescript": "^5.0.0"
  }
}
