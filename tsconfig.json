{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "outDir": "./dist",

    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,

    "moduleResolution": "node",
    "resolveJsonModule": false,
    "allowSyntheticDefaultImports": true,
    "types": ["node"],

    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  },

  "include": [
    "src/**/*.ts",
    "tests/**/*.ts"
  ],

  "exclude": [
    "node_modules",
    "dist",
    "artifacts",
    "cache",
    "data"
  ],

  "ts-node": {
    "compilerOptions": {
      "module": "commonjs",
      "esModuleInterop": true
    }
  }
}

